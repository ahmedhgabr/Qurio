<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- outer stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="#223238"/> <!-- subtle outline -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- inner dark fill (inset to create thin border) -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0b1112"
                android:endColor="#071014"
                android:angle="90"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

</layer-list>
